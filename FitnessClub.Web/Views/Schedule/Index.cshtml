@model IEnumerable<FitnessClub.BLL.Dtos.ClassScheduleDto>
@using Microsoft.AspNetCore.Mvc.Rendering // Для SelectList

@{
    ViewData["Title"] = "Class Schedule";
    var selectedClubId = ViewBag.SelectedClubId as int?;
    var selectedDateStr = ViewBag.SelectedDate as string ?? DateTime.Today.ToString("yyyy-MM-dd");
    var selectedClubName = ViewBag.SelectedClubName as string ?? "All Clubs";
    var clubsSelectList = ViewBag.Clubs as SelectList;
}

<section class="hero" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('../img/schedule-bg.jpg');">
    <div class="hero-content">
        <h1>Розклад занять</h1>
        <p>Знайдіть зручний для вас час для занять</p>
    </div>
</section>

<section class="section">
    <div class="container">
        <h2 class="section-title">Знайти заняття</h2>
        
        <div style="max-width: 800px; margin: 0 auto 40px;">
            <form id="schedule-form" method="get" action="@Url.Action("Index", "Schedule")" class="card" style="padding: 30px;">
                <div style="display: flex; gap: 20px; flex-wrap: wrap; margin-bottom: 20px;">
                    <div class="form-group" style="flex: 1;">
                        <label class="form-label" for="club-select">Виберіть клуб:</label>
                        @Html.DropDownList("clubId", clubsSelectList, "-- Оберіть клуб --", new { id = "club-select", @class = "form-control" })
                    </div>
                    <div class="form-group" style="flex: 1;">
                        <label class="form-label" for="date-select">Виберіть дату:</label>
                        <input type="date" id="date-select" name="date" class="form-control" value="@selectedDateStr">
                    </div>
                </div>
                <div style="text-align: center;">
                    <button type="submit" id="view-schedule-button" class="btn btn-primary" style="display: none;">Переглянути розклад</button>
                </div>
            </form>
        </div>
        
        <div id="schedule-results">
             @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }
            else if (ViewBag.InfoMessage != null)
            {
                 <div class="alert alert-info" role="alert">
                    @ViewBag.InfoMessage
                </div>
            }

            @if (Model != null && Model.Any())
            {
                <h3 style="margin-bottom: 20px;">Розклад для "@selectedClubName" на @selectedDateStr</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Час</th>
                            <th>Тип заняття</th>
                            <th>Тренер</th>
                            <th>Тривалість</th>
                            <th>Доступність</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var schedule in Model)
                        {
                            var startTime = schedule.StartTime;
                            var endTime = schedule.EndTime;
                            var duration = endTime - startTime;
                            var availablePlaces = schedule.Capacity - schedule.BookedPlaces;
                            var canBook = availablePlaces > 0;
                            DateTime.TryParse(selectedDateStr, out var classDate);

                            <tr>
                                <td>@startTime.ToString("hh\\:mm") - @endTime.ToString("hh\\:mm")</td>
                                <td>@schedule.ClassType</td>
                                <td>@schedule.TrainerName</td>
                                <td>@duration.TotalMinutes хв.</td>
                                <td>
                                    @if (canBook)
                                    {
                                        <span class="badge bg-success">@availablePlaces місць доступно</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Немає місць</span>
                                    }
                                </td>
                                <td>
                                    @if (canBook && classDate.Date >= DateTime.Today)
                                    {
                                        <a asp-controller="Booking" asp-action="Create" asp-route-scheduleId="@schedule.ClassScheduleId" asp-route-classDate="@selectedDateStr" class="btn btn-primary btn-sm">Забронювати</a>
                                    }
                                    else if (!canBook)
                                    {
                                        <span class="text-muted">Немає місць</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Минуле</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</section>

<section class="section" style="background-color: var(--primary-light);">
    <div class="container">
        <h2 class="section-title">Типи занять</h2>
        
        <div class="card-grid">
            <div class="card animate-on-scroll">
                <div class="card-body">
                    <h3 class="card-title">Йога</h3>
                    <p class="card-text">Заняття йогою допоможуть покращити гнучкість, зміцнити м'язи та розслабитися.</p>
                </div>
            </div>
            <div class="card animate-on-scroll">
                <div class="card-body">
                    <h3 class="card-title">Пілатес</h3>
                    <p class="card-text">Пілатес фокусується на зміцненні м'язів кора, покращенні постави та загальної фізичної форми.</p>
                </div>
            </div>
            <div class="card animate-on-scroll">
                <div class="card-body">
                    <h3 class="card-title">Бокс</h3>
                    <p class="card-text">Тренування з елементами боксу, спрямовані на розвиток витривалості, сили та координації.</p>
                </div>
            </div>
            <div class="card animate-on-scroll">
                <div class="card-body">
                    <h3 class="card-title">Кросфіт</h3>
                    <p class="card-text">Високоінтенсивний функціональний тренінг, що поєднує елементи важкої атлетики, гімнастики та кардіо.</p>
                </div>
            </div>
            <div class="card animate-on-scroll">
                <div class="card-body">
                    <h3 class="card-title">Фітнес</h3>
                    <p class="card-text">Комплексні тренування для покращення загальної фізичної форми, здоров'я та самопочуття.</p>
                </div>
            </div>
            <div class="card animate-on-scroll">
                <div class="card-body">
                    <h3 class="card-title">Розтяжка</h3>
                    <p class="card-text">Заняття, спрямовані на розтяжку всіх груп м'язів, поліпшення гнучкості та пластичності тіла.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <h2 class="section-title">Як забронювати заняття?</h2>
        
        <div style="max-width: 800px; margin: 0 auto;">
            <div class="card-grid" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));">
                <div class="card animate-on-scroll">
                    <div class="card-body" style="text-align: center;">
                        <h3 class="card-title">Крок 1</h3>
                        <p class="card-text">Виберіть клуб та дату в формі пошуку</p>
                    </div>
                </div>
                <div class="card animate-on-scroll">
                    <div class="card-body" style="text-align: center;">
                        <h3 class="card-title">Крок 2</h3>
                        <p class="card-text">Знайдіть бажане заняття в розкладі</p>
                    </div>
                </div>
                <div class="card animate-on-scroll">
                    <div class="card-body" style="text-align: center;">
                        <h3 class="card-title">Крок 3</h3>
                        <p class="card-text">Натисніть "Забронювати" і заповніть форму</p>
                    </div>
                </div>
                <div class="card animate-on-scroll">
                    <div class="card-body" style="text-align: center;">
                        <h3 class="card-title">Крок 4</h3>
                        <p class="card-text">Отримайте підтвердження та приходьте на заняття</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const clubSelect = document.getElementById('club-select');
            const viewButton = document.getElementById('view-schedule-button');

            function toggleButtonVisibility() {
                if (clubSelect.value) {
                    viewButton.style.display = 'block';
                } else {
                    viewButton.style.display = 'none';
                }
            }
            toggleButtonVisibility();
            clubSelect.addEventListener('change', toggleButtonVisibility);
        });
    </script>
}