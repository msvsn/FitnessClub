@model FitnessClub.Web.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вхід";
}

<section class="section">
    <div class="container">
        <div style="max-width: 500px; margin: 0 auto;">
            <div class="card" style="padding: 30px;">
                <h2 style="margin-bottom: 30px; text-align: center;">Вхід у систему</h2>
                
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="form-label" for="username">Ім'я користувача:</label>
                        <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" for="password">Пароль:</label>
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>                   
                    <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 20px;">Увійти</button>
                    
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div style="color: #dc3545; margin-top: 20px; text-align: center;">
                            @ViewData["ErrorMessage"]
                        </div>
                    }
                </form>
                
                <div style="text-align: center; margin-top: 30px;">
                    <p>Ще не маєте акаунта? <a href="/Account/Register">Зареєструватися</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }