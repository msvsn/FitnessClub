@model FitnessClub.BLL.Dtos.UserDto
@{
    ViewData["Title"] = "Мій профіль";
    var membership = ViewBag.Membership as FitnessClub.BLL.Dtos.MembershipDto;
}

<section class="section">
    <div class="container">
        <div style="max-width: 800px; margin: 0 auto;">
            <div class="card" style="padding: 30px; margin-bottom: 30px;">
                <h2 style="margin-bottom: 20px;">Профіль користувача</h2>
                
                <div style="display: flex; gap: 20px; flex-wrap: wrap; margin-bottom: 20px;">
                    <div style="flex: 1; min-width: 300px;">
                        <h3 style="font-size: 1.4rem; margin-bottom: 15px;">Особиста інформація</h3>
                        <p><strong>Ім'я:</strong> @Model.FirstName @Model.LastName</p>
                        <p><strong>Користувач:</strong> @Model.Username</p>
                    </div>
                    
                    <div style="flex: 1; min-width: 300px;">
                        <h3 style="font-size: 1.4rem; margin-bottom: 15px;">Членство</h3>
                        @if (membership != null)
                        {
                            <div class="@(membership.EndDate < DateTime.Now ? "alert alert-danger" : "")">
                                <p><strong>Тип:</strong> @(membership.MembershipTypeId == 1 ? "Один клуб" : "Мережевий")</p>
                                <p><strong>Клуб:</strong> @membership.ClubName</p>
                                <p><strong>Дійсний до:</strong> @membership.EndDate.ToString("dd.MM.yyyy")</p>
                                
                                @if (membership.EndDate < DateTime.Now)
                                {
                                    <p style="color: #dc3545; margin-top: 10px;">Ваш абонемент закінчився! Придбайте новий для отримання послуг.</p>
                                }
                                else
                                {
                                    <p><strong>Залишилось днів:</strong> @((membership.EndDate - DateTime.Now).Days)</p>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <p>У вас немає активного абонементу.</p>
                                <p>Придбайте абонемент для відвідування занять та користування клубом.</p>
                            </div>
                        }
                    </div>
                </div>
                
                <div style="display: flex; gap: 10px; margin-top: 20px;">
                    <a href="/Membership" class="btn btn-primary">Придбати/Оновити абонемент</a>
                    <a href="/Account/Logout" class="btn btn-outline">Вийти</a>
                </div>
            </div>
            
            <div class="card" style="padding: 30px;">
                <h3 style="font-size: 1.4rem; margin-bottom: 15px;">Мої заняття</h3>
                <a href="/Booking/MyBookings" class="btn btn-primary">Переглянути мої бронювання</a>
            </div>
        </div>
    </div>
</section>