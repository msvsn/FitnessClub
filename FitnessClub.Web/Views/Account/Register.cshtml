@model FitnessClub.Web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Реєстрація";
}

<section class="section">
    <div class="container">
        <div style="max-width: 500px; margin: 0 auto;">
            <div class="card" style="padding: 30px;">
                <h2 style="margin-bottom: 30px; text-align: center;">Реєстрація</h2>
                
                <form asp-action="Register" method="post">
                    <div class="form-group">
                        <label class="form-label">Ім'я:</label>
                        <input asp-for="FirstName" class="form-control" required />
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Прізвище:</label>
                        <input asp-for="LastName" class="form-control" required />
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Ім'я користувача:</label>
                        <input asp-for="Username" class="form-control" required />
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Пароль:</label>
                        <input asp-for="Password" type="password" class="form-control" required />
                    </div>
                    
                    <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 20px;">Зареєструватись</button>
                    
                    <div asp-validation-summary="All" class="text-danger" style="margin-top: 20px;"></div>
                </form>
                
                <div style="text-align: center; margin-top: 30px;">
                    <p>Вже маєте акаунт? <a href="/Account/Login">Увійти</a></p>
                </div>
            </div>
        </div>
    </div>
</section>